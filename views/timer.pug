html
  head
    title RMTimer
    meta(name='viewport' content='width=device-width, initial-scale=1')
    include partials/head.pug
    link(rel="stylesheet", type="text/css", href="/css/timer.css")
    
  body(onload="getDisplayElements()")
    div.uk-flex.uk-flex-center.uk-flex-middle
    
    div.uk-card.uk-padding-small
      span#timerId.uk-badge
      a.uk-float-right.uk-link-text(href='/') Home
  
    div#timer-display.uk-flex.uk-flex-between.uk-padding
      div#hours.digit
        div 00
      div.separator :
      div#minutes.digit
        div 00
      div.separator :
      div#seconds.digit
        div 00
      div.separator .
      div#centiseconds.digit
        div 00
          
    div.uk-position-bottom.uk-flex.uk-flex-between.uk-child-width-expand
      button#start-button.uk-button.uk-button-default.uk-padding-small.uk-padding-remove-horizontal.uk-box-shadow-small(onclick="startTimer()")
       i.material-icons play_arrow
      button#stop-button.uk-button.uk-button-default.uk-padding-small.uk-padding-remove-horizontal.uk-box-shadow-small(onclick="stopTimer()")
       i.material-icons pause
      button#stop-button.uk-button.uk-button-default.uk-padding-small.uk-padding-remove-horizontal.uk-box-shadow-small(onclick="resetTimer()")
       i.material-icons replay
      
  script(type="text/javascript", src="/socket.io/socket.io.js")
  script.
    myTimerId="#{timerId}"
  script(type="text/javascript", src="/js/timerController.js")
  script(type="text/javascript", src="/js/socket.js")
